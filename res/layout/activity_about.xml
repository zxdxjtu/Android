<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout
	android:orientation="vertical" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:background="#f5efca"> 
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp"
       	android:background="@drawable/menu">
       	<ImageButton 
       	    android:id="@+id/settingBack"
       	    android:layout_width="27dp"
       	    android:layout_height="20dp"
       	    android:scaleType="fitXY"
       	    android:src="@drawable/toleft"
       	    android:layout_centerVertical="true"
       	    android:background="#00000000"
       	    android:layout_marginLeft="10dp"/>
       	<TextView
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_centerInParent="true"
       	    android:text="关于" 
       	    android:textColor="#ffffff"
       	    android:textSize="20dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="还在为午饭吃什么苦恼吗？"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="还在为看什么电影苦恼吗？"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="还在为买什么礼物苦恼吗？"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="！！赶紧使用YOUR CHOICE！！"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:text="！！！帮你摆脱选择的烦恼！！！"/>
</LinearLayout>
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:textSize="13sp"
        android:text="Copyright PMgroup. All Right Reserved"/>
</RelativeLayout>
